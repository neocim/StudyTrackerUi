<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyTrackerUi.Pages.CreateSubTaskPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Create a subtask"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Creates a subtask" />

            <Entry x:Name="SubTaskName" Placeholder="Enter name" />
            <Entry x:Name="SubTaskDescription" Placeholder="Enter subtask description" />

            <Button
                x:Name="Button"
                Text="Do Something"
                SemanticProperties.Hint="something"
                Clicked="OnClicked"
                HorizontalOptions="Fill"
                WidthRequest="100"
                HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>