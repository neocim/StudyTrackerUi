<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyTrackerUi.Pages.MainPage">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="10">

                <Label
                    Text="Your tasks"
                    Style="{StaticResource Headline}" />
            </VerticalStackLayout>
        </ScrollView>

        <Button
            Style="{StaticResource CreateTasksButton}"
            Clicked="CreateTasksButtonClicked" />
    </Grid>

</ContentPage>