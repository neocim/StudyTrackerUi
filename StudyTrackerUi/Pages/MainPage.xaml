<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyTrackerUi.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Welcome to Study Tracker!"
                Style="{StaticResource SubHeadline}" />

            <Button
                Style="{StaticResource CircleButton}"
                x:Name="CreateTaskButton"
                Clicked="CreateTaskButtonClicked"
                Text="+"
                FontSize="40"
                Margin="0,600,0,0"
                SemanticProperties.Hint="Open the task creation page" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>